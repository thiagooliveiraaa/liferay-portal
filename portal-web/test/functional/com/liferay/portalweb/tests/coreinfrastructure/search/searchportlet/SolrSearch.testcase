			portletOption = "Configuration");

		SelectFrame(locator1 = "IFrame#CONFIGURATION");

		AssertTextEquals(
			locator1 = "SearchResults#RESULTS_PORTLET_PAGINATION_CONFIG",
			value1 = 2);

		IFrame.closeFrame();

		SearchResultPortlet.paginateAndViewSearchResults(
