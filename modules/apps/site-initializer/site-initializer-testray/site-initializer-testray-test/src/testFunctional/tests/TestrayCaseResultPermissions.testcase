			TestrayBuild.goToBuild(buildName = ${buildName});
		}

		task ("When the user right click in case result") {
			RightClick.rightClick(
				key_projectName = ${caseName},
				locator1 = "Testray#ITEM_NAME");
		}

		task ("Then the user can not delete the case result") {
			AssertElementNotPresent(
				item = "Delete",
				locator1 = "TestrayContextMenu#CONTEXT_MENU_PROJECTS_ITEMS");
		}
	}

